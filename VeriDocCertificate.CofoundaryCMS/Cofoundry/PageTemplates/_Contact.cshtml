@model IPageViewModel
@inject ICofoundryTemplateHelper<IPageViewModel> Cofoundry

@Cofoundry.Template.UseDescription("Template for the contact page")
@section Styles{
    <link href="~/css/contactus.css" rel="stylesheet" asp-append-version="true" />
}
    <!----------Contact section start------>
    <section class="contact_us">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h2 class="title">Let's chat. </h2>
                    <h2 class="title"> Talk to us about your </h2><h2 class="title"> requirement. </h2>

                    <div class="contact_detail">
                        <ul>
                            <li>
                                <a href="mailto:admin@veridoccertificates.com" class="d-inline-flex align-items-center">
                                    <span>
                                        <i class="fa fa-envelope"></i>
                                    </span>
                                    <p>
                                        admin@veridoccertificates.com
                                    </p>
                                </a>
                            </li>                            
                            <li>
                            <a href="https://tvdg.io/9AAAAA" target="_blank" class="d-inline-flex contact-add">
                                    <span><i class="fa fa-map-marker"></i></span>
                                    <p>
                                        Level 18, 123 Eagle Street, Brisbane, Queensland 4000 Australia
                                    </p>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                 <div class="col-lg-6">
                        <form method="post" name="contact-form">
                            <div class="send_us_message">
                        <h5 class="heading">Send us a message</h5>
                        <div class="form-group">
                            <label for="first_name">Name <span>*</span></label>
                            <div class="row">
                                <div class="col-lg-6 mb-3 mb-lg-0">
                                    <input name="first_name" class="form-control" type="text" placeholder="First Name">
                                </div>
                                <div class="col-lg-6">
                                    <input name="last_name" class="form-control" type="text" placeholder="Last Name">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12">
                                <label for="email_name">Email <span>*</span></label>
                                <input name="email_name" class="form-control" type="email" placeholder="Enter your email">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="phone_number">Phone Number</label>
                            <div class="row">
                                <div class="col-lg-6 mb-3 mb-lg-0">
                                    <div style="position: relative;">
                                        <select name="ContactCountyCode1" id="" class="CountyCode1 dial form-control">
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <input name="phone_number" type="number" maxlength="10" placeholder="Enter your phone number" class="form-control">
                                    <small class="phone_p">
                                        Please enter the phone number without plus sign ("+") <br>
                                        and country code
                                    </small>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <label for="enter_message">Please describe what you need help with: <span>*</span></label>
                                <textarea name="enter_message" class="mb-1 form-control" id="" cols="30" rows="5"
                                          placeholder="Enter your message" maxlength="200"></textarea>
                                <p class="max_200">Max 200 Characters</p>
                            </div>
                                    <input type="hidden" class="form-control" id="hdnRecaptcha" />
                                    <div class="col-lg-12">
                                <button type="submit" id="btnContact" class="btn_2 w-100 position-relative">Submit</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                      
                    </div>
            </div>
        </div>
    </section>

    @section FooterScripts{

    <script src="https://www.google.com/recaptcha/api.js?render=6LdWFxoeAAAAAIV5QiMZ1CoLILIMhJ01xhUl5KX1"></script>



}