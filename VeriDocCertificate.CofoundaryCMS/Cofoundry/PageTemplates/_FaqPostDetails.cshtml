@model ICustomEntityPageViewModel<FaqPostDisplayModel>
@inject ICofoundryTemplateHelper<ICustomEntityPageViewModel<FaqPostDisplayModel>> Cofoundry

@{
    Cofoundry.Template.UseDescription("Template for the faq post details page");
    var post = Model.CustomEntity.Model;
}
@section Styles{
    <link href="~/css/all-details-page.css" rel="stylesheet" asp-append-version="true" />
}
<section class="blog_header">
    <div class="blog-header-main">
         <div class="container">
            <div class="col-lg-12  mx-auto">
                <div class="section-title">
                    <h1 class="title">@post.Title</h1>
                    <p>@post.Date.ToString("dd MMM yyyy")</p>
                </div>
            </div>
          </div>
    </div>
   

</section>
<section class="blog_content mb-5 py-0">
    <div class="container">
         @(await Cofoundry.Template.CustomEntityRegion("Body").AllowMultipleBlocks().EmptyContentMinHeight(500).InvokeAsync())
    </div>

</section>
 
<section class="blog_footer py-0">
    <div class="container">
        <div class="col-lg-12  mx-auto">
            <div class="go-back">
                <a href="~/faq" class="btn_2"><i class="fa fa-angle-left" aria-hidden="true"></i>Go Back</a>
            </div>
        </div>
    </div>
</section>

@section FooterScripts{
    <script>
        $('.blog_content').find('p,ul,a,li,h1,h2,h3,h4,h5,h6,span').removeAttr('style dir data-sheets-value data-sheets-userformat');
    </script>
}